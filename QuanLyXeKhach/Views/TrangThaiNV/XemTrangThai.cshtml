@model IEnumerable<DataModel.TrangThaiNV>
<div class="container">
    <p>
        @Html.ActionLink("Thêm", "ThemTrangThai")
    </p>
    <table class="table">
        <tr>
            <th>
                Trạng Thái
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.tenTT)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.maTT }) |
                    @Html.ActionLink("Details", "XemTrangThaiNV", new { id = item.maTT }) |
