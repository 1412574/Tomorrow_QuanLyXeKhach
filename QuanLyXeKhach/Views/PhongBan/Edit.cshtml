@model DataModel.PhongBan


@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutPhongBan.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">CẬP NHẬT THÔNG TIN PHÒNG BAN</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-info">
                <div class="panel-heading">
                    Cập nhật thông tin phòng ban
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            @using (Html.BeginForm("CapNhatPhongBan", "PhongBan", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()

                                <form role="form">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.maPB)

                                    <div class="form-group">
                                        <label>Tên Vai Trò:</label>
                                        @Html.TextBoxFor(model => model.tenPB, new { @class = "form-control" })
                                    </div>



                                    <div class="form-group">
                                        <label>Mô Tả:</label>
                                        @Html.TextBoxFor(model => model.moTaPB, new { @class = "form-control" })

                                    </div>

                                    <button type="submit" class="btn btn-lg btn-success">Lưu cập nhật</button>

                                </form>
                            }
                        </div>

                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /#page-wrapper -->
