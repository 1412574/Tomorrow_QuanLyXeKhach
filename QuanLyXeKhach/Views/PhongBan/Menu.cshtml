@model IEnumerable<DataModel.PhongBan>
<div class="container">
    <p>
        @Html.ActionLink("Thêm mới", "Index")
    </p>
    <table class="table">
        <tr>
            <th>
                Tên phòng ban
            </th>
            <th>
                Mô tả
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.tenPB)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.moTaPB)
                    </td>*@
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.maPB }) |
                    @Html.ActionLink("Details", "Details", new { id = item.maPB }) |
                    @Html.ActionLink("Delete", "XoaPhongBan", new { id = item.maPB })
                </td>
            </tr>
        }

    </table>
</div>