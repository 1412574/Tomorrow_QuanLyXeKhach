@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPhongBan.cshtml";
}

@model DataModel.PhongBan

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">THÊM PHÒNG BAN</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-danger">
                <div class="panel-heading">
                    Thêm mới phòng ban
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            @using (Html.BeginForm("ThemPhongBan", "PhongBan", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()

                                <form role="form">
                                    <div class="form-group">
                                        <label>Tên Phòng Ban</label>
                                        @Html.TextBoxFor(model => model.tenPB, new { @class = "form-control", @required = "required" })

                                    </div>
                                    <div class="form-group">
                                        <label>Mô Tả</label>
                                        @Html.TextBoxFor(model => model.moTaPB, new { @class = "form-control", @required = "required" })

                                    </div>
                                    <button type="submit" class="btn btn-lg btn-success">Xác nhận thêm</button>

                                </form>
                            }
                        </div>

                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /#page-wrapper -->
