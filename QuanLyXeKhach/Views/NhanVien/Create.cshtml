@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutNhanVien.cshtml";
}

@model DataModel.NhanVien

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">THÊM NHÂN VIÊN</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-danger">
                <div class="panel-heading">
                    Thêm mới một nhân viên
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            @using (Html.BeginForm("ThemNhanVien", "NhanVien", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()

                                <form role="form">
                                    <div class="form-group">
                                        <label>Tên Nhân Viên</label>
                                        @Html.TextBoxFor(model => model.hoTen, new { @class = "form-control", @required = "required" })

                                    </div>
                                    <div class="form-group">
                                        <label>CCCD</label>
                                        @Html.TextBoxFor(model => model.cCCD, new { @class = "form-control", @required = "required" })

                                    </div>
                                    <div class="form-group">
                                        <label>Bằng Cấp</label>
                                        @Html.TextBoxFor(model => model.bangCap, new { @class = "form-control", @required = "required" })

                                    </div>
                                    <div class="form-group">
                                        <label>SĐT</label>
                                        @Html.TextBoxFor(model => model.sDT, new { @class = "form-control", @required = "required" })

                                    </div>
                                    <div class="form-group">
                                        <label>Địa Chỉ</label>
                                        @Html.TextBoxFor(model => model.diaChi, new { @class = "form-control", @required = "required" })
                      
                                    </div>
                                    <div class="form-group">
                                        <label>Lương Căn Bản</label>
                                        @Html.TextBoxFor(model => model.luongCanBan, new { @class = "form-control", @required = "required" })
                                    </div>
                                    <div class="form-group">
                                        <label>Vai Trò</label>
                                        @Html.DropDownList("maVT", null, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.maVT, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <label>Trạng Thái</label>
                                        @Html.DropDownList("maTT", null, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.maTT, "", new { @class = "text-danger" })
                                    </div>

                                    <button type="submit" class="btn btn-lg btn-success">Xác nhận thêm</button>

                                </form>
                            }
                        </div>

                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /#page-wrapper -->
