@{
    Layout = "~/Views/Shared/_LayoutTuyenXe.cshtml";
}

@model IEnumerable<DataModel.TuyenXe>

<div class="main-content">
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">QUẢN LÝ TUYẾN XE</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-success">
                    <div class="panel-heading">
                        Danh sách tuyến xe
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>Tên tuyến xe</th>
                                    <th>Giá vé</th>
                                    <th>Loại xe</th>
                                    <th>Thời gian (h)</th>
                                    <th>Quãng đường (km)</th>
                                    <th>Số chuyến/ngày</th>
                                    <th>Lựa chọn</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{int i = 1;}
                                @foreach (var item in Model)
                                {

                                    <tr class="odd gradeX">
                                        <td>@i</td>
                                        @{i++; }
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TenTuyenXe)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.GiaVe)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.LoaiXe)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ThoiGian)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.QuangDuong)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SoChuyen)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.MaTuyenXe }) |
                                            @Html.ActionLink("Chi tiết", "Details", new { id = item.MaTuyenXe }) |
                                            @Html.ActionLink("Xóa", "Delete", new { id = item.MaTuyenXe })
                                        </td>
                                    </tr>
                                            }

                            </tbody>
                        </table>
                        <!-- /.table-responsive -->

                    </div>
                    <!-- /.panel-body -->
                    <div style="padding-left: 10px; padding-bottom: 10px">
                        <input type="button" class="btn btn-lg btn-info" value="Thêm tuyến xe" onclick="location.href='@Url.Action("Create","TuyenXe")'" />
                    </div>
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>

        <!-- /.row -->
    </div>
    </div>