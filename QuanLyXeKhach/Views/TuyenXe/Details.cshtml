
@{
    ViewBag.Title = "Chi tiết tuyến";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

@model DataModel.TuyenXe

<div class="main-content">
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">CHI TIẾT TUYẾN XE</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-danger">
                    <div class="panel-heading">
                        Thông tin chi tiết tuyến xe
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-10">
                                <dl class="dl-horizontal">
                                    <dt>
                                        @Html.DisplayNameFor(model => model.TenTuyenXe)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.TenTuyenXe)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.GiaVe)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.GiaVe)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.LoaiXe)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.LoaiXe)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.ThoiGian)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.ThoiGian)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.QuangDuong)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.QuangDuong)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.SoChuyen)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.SoChuyen)
                                    </dd>

                                    <dt>
                                        Hành trình
                                    </dt>

                                    <dd>
                                        @foreach (var item in ViewBag.HanhTrinh)
                                        {
                                            @item.TenTramXe
                                            @: -
                                    }
                                    </dd>

                                </dl>
                            </div>

                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                    <div>
                        @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.MaTuyenXe }) |
                        @Html.ActionLink("Trở lại danh sách", "Index")
                    </div>
                </div>
                <!-- /.panel -->

            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /#page-wrapper -->
    </div>