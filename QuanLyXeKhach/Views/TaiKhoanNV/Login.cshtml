@model DataModel.TaiKhoanNV


<div class="main-content">
    <div class="align">

        <div class="grid">
        @using (Html.BeginForm("DangNhap", "TaiKhoanNV", FormMethod.Post))
        {
            @Html.AntiForgeryToken() 
            <div class="form login">

                <div class="login__header">
                    <h3 class="login__title">Đăng Nhập</h3>
                </div>

                <div class="login__body">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form__field">

                        @Html.EditorFor(model => model.maNV, new { htmlAttributes = new { @class = "form-control", placeholder = "Tên đăng nhập"} })
                        @Html.ValidationMessageFor(model => model.maNV, "", new { @class = "text-danger" })
                     </div>
                    <div class="form__field">
                        @Html.PasswordFor(model => model.matKhau, new { @class = "form-control", placeholder = "Password" })
                        @Html.ValidationMessageFor(model => model.matKhau, "", new { @class = "text-danger" })
                     </div>
                </div>

                <div class="login__footer">
                    <input type="submit" value="Đăng Nhập">
                   
                </div>

            </div>
        }

        </div>

    </div>


</div>
