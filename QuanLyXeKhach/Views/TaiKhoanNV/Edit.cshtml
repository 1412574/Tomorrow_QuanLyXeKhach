@model QuanLyXeKhach.Models.PassWords

<div class="main-content">
    <div class="align">

        <div class="grid">
            @using (Html.BeginForm("CapNhatTaiKhoanNV", "TaiKhoanNV", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form login">

                    <div class="login__header">
                        <h3 class="login__title">Cập nhật mật khẩu</h3>
                    </div>

                    <div class="login__body">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form__field">

                            @Html.PasswordFor(model => model.passWord, new { @class = "form-control", placeholder = "Password mới" })
                            @Html.ValidationMessageFor(model => model.passWord, "", new { @class = "text-danger" })
                        </div>
                        <div class="form__field">
                            @Html.PasswordFor(model => model.passWordCF, new { @class = "form-control", placeholder = "Xác nhận password" })
                            @Html.ValidationMessageFor(model => model.passWordCF, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="login__footer">
                        <input type="submit" value="Cập nhật">

                    </div>

                </div>
            }

        </div>

    </div>


</div>