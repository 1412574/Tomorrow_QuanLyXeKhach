@model DataModel.LichPhongVan

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()
	<form>
		<div class="modal-body">
			<div class="form-horizontal">

				@Html.ValidationSummary(true, "", new { @class = "text-danger" })
				@Html.HiddenFor(model => model.maLPV)
				<h3>
					<span>Mã lịch phỏng vấn: @Model.maLPV</span>
				</h3>


				<div class="row">
					<div class="col-md-12">
						<div class="col-md-12">
							<div class="form-group">
								@Html.LabelFor(model => model.ngay, htmlAttributes: new { @class = "col-md-12" })
								<div class="col-md-12">
										@Html.TextBoxFor(model => model.ngay, Model.ngay.ToShortDateString(), new { @class = "form-control datepicker", @placeholder="ngày/tháng/năm"})
								</div>
							</div>
						</div>


						<div class="col-md-12">
							<div class="form-group">
								@Html.LabelFor(model => model.tieuChi, htmlAttributes: new { @class = "col-md-12" })
								<div class="col-md-12">
									@Html.EditorFor(model => model.tieuChi, new { htmlAttributes = new { @class = "form-control" } })
								</div>
							</div>
						</div>

						<div class="col-md-12">
							<div class="form-group">
								@Html.LabelFor(model => model.ghiChu, htmlAttributes: new { @class = "col-md-12" })
								<div class="col-md-12">
									@Html.EditorFor(model => model.ghiChu, new { htmlAttributes = new { @class = "form-control" } })
								</div>
							</div>
						</div>

					</div>

				</div>
			</div>
		</div>

		<div class="modal-footer">
			<div class="text-center col-md-12" style="margin-top:15px;">
				<button type="submit" class="btn btn-primary btn-sx"><i class="glyphicon glyphicon-save"></i> Lưu</button>
			</div>
		</div>
	</form>
}
