
@{
    Layout = "~/Views/Shared/_LayoutDatVe.cshtml";
}
@model DataModel.KhachHang

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">XÓA KHÁCH HÀNG</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-danger">
                <div class="panel-heading">
                    Bạn thật sự muốn xóa khách hàng này chứ ?
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            @using (Html.BeginForm("XoaKhachHang", "KhachHang", FormMethod.Post))
    {
                        @Html.AntiForgeryToken()

                            <form role="form">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.maKhachHang)

                                <div class="form-group">
                                    <label>Họ và tên:</label>
                                    @Html.TextBoxFor(model => model.tenKhachHang, new { @class = "form-control", @disabled = "disabled" })

                                </div>
                                <div class="form-group">
                                    <label>Số điện thoại:</label>
                                    @Html.TextBoxFor(model => model.soDienThoai, new { @class = "form-control", @disabled = "disabled" })

                                </div>
                                <div class="form-group">
                                    <label>Email tài khoản:</label>
                                    @Html.TextBoxFor(model => model.taiKhoan, new { @class = "form-control", @disabled = "disabled" })

                                </div>
                                <button type="submit" class="btn btn-lg btn-danger">Xác nhận xóa</button>
                                <input type="button" class="btn btn-lg btn-info" value="Hủy bỏ" onclick="location.href='@Url.Action("HuyxoaKhachHang","KhachHang")'" />

                            </form>
                        }          
                          

                            @*@using (Html.BeginForm("HuyxoaKhachHang", "KhachHang", FormMethod.Post))
                            {
                                <button type="submit" class="btn btn-lg btn-danger">Hủy bỏ</button>
                            }*@

                        </div>

                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /#page-wrapper -->
