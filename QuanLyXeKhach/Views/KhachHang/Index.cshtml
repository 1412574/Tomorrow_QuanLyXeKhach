@{
    Layout = "~/Views/Shared/_LayoutDatVe.cshtml";
}
@model IEnumerable<DataModel.KhachHang>


<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">KHÁCH HÀNG</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-success">
                <div class="panel-heading">
                    Danh sách khách hàng
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Mã</th>
                                <th>Tên khách hàng</th>
                                <th>Số điện thoại</th>
                                <th>Tài khoản</th>
                                <th>Lựa chọn</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{int i = 1;}
                            @foreach (var item in Model)
                            {

                            <tr class="odd gradeX">
                                <td>@i</td>
                                @{i++; }
                                <td>@Html.DisplayFor(modelItem => item.maKhachHang)</td>
                                <td>@Html.DisplayFor(modelItem => item.tenKhachHang)</td>
                                <td class="center">@Html.DisplayFor(modelItem => item.soDienThoai)</td>
                                <td class="center">@Html.DisplayFor(modelItem => item.taiKhoan)</td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.maKhachHang }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.maKhachHang })
                                </td>
                            </tr>
}

                        </tbody>
                    </table>
                    <!-- /.table-responsive -->

                </div>
                <!-- /.panel-body -->
                <div style="padding-left: 10px; padding-bottom: 10px">
                    <input type="button" class="btn btn-lg btn-info" value="Thêm khách hàng" onclick="location.href='@Url.Action("Them","KhachHang")'" />
                </div>
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <!-- /.row -->
</div>
<script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
<script>
        $('#dataTables-example').DataTable();
</script>v
