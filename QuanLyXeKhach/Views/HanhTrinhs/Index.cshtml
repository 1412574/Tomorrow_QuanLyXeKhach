@{
    Layout = "~/Views/Shared/_LayoutTuyenXe.cshtml";
}

@model IEnumerable<DataModel.HanhTrinh>




<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">QUẢN LÝ HÀNH TRÌNH</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-success">
                <div class="panel-heading">
                    Danh sách hành trình
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>
                                    Tên trạm xe
                                </th>
                                <th>
                                    Thuộc tuyến
                                </th>
                                <th>
                                    Thứ tự
                                </th>
                                <th>Lựa chọn</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{int i = 1;}
                            @foreach (var item in Model)
                            {

                                <tr class="odd gradeX">
                                    <td>@i</td>
                                    @{i++; }
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TramXe.TenTramXe)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TuyenXe.TenTuyenXe)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ThuTu)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.MaHanhTrinh }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.MaHanhTrinh }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.MaHanhTrinh })
                                    </td>
                                </tr>
                                        }

                        </tbody>
                    </table>
                    <!-- /.table-responsive -->

                </div>
                <!-- /.panel-body -->
                <div style="padding-left: 10px; padding-bottom: 10px">
                    <input type="button" class="btn btn-lg btn-info" value="Thêm hành trình" onclick="location.href='@Url.Action("Create","HanhTrinhs")'" />
                </div>
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <!-- /.row -->
</div>