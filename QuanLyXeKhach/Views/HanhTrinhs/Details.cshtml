@{
    ViewBag.Title = "Chi tiết tuyến";
    Layout = "~/Views/Shared/_LayoutTuyenXe.cshtml";
}

@model DataModel.HanhTrinh


<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">CHI TIẾT HÀNH TRÌNH</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-danger">
                <div class="panel-heading">
                    Thông tin chi tiết các trạm dừng của 1 tuyến xe
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-10">
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.TramXe.TenTramXe)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.TramXe.TenTramXe)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.TuyenXe.TenTuyenXe)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.TuyenXe.TenTuyenXe)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.ThuTu)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.ThuTu)
                                </dd>

                            </dl>
                        </div>

                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
                <div>
                    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.MaHanhTrinh }) |
                    @Html.ActionLink("Trở lại danh sách", "Index")
                </div>
            </div>
            <!-- /.panel -->

        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /#page-wrapper -->
