@{
    ViewBag.Title = "Xóa tuyến";
    Layout = "~/Views/Shared/_LayoutTuyenXe.cshtml";
}

@model DataModel.HanhTrinh



<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">XÓA HÀNH TRÌNH</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-danger">
                <div class="panel-heading">
                    Bạn có thật sự muốn xóa hành trình này?
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-10">
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.TramXe.TenTramXe)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.TramXe.TenTramXe)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.TuyenXe.TenTuyenXe)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.TuyenXe.TenTuyenXe)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.ThuTu)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.ThuTu)
                                </dd>

                            </dl>

                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-actions no-color">
                                    <input type="submit" value="Xóa" class="btn btn-danger" /> |
                                    @Html.ActionLink("Trở lại danh sách", "Index")
                                </div>
                            }
                        </div>

                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->

        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /#page-wrapper -->
