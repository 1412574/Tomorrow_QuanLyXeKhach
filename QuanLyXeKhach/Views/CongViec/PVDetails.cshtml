@model DataModel.CongViec
<div class="modal-body">

	<div class="form-horizontal">

		<div class="row">
			<div class="col-md-12 item_content">
				<div class="col-md-9">
					<h3>
						<span>Mã công việc @Model.maCV</span>
					</h3>
				</div>
				<div class="col-md-3" style="margin-top:24px;">
