						<button class="btn btn-warning btn-xs pull-right sharp" ; data-dismiss="modal" data-toggle="modal" onclick="Edit(@Model.maCV)"><i class="glyphicon glyphicon-edit"></i></button>
					</div>
				</div>
			</div>
			<div class="dl-horizontal">
				<div class="">
					<div class="row">
						<div class="col-md-12">
							<div class="">
								<dt>
									@Html.DisplayNameFor(model => model.tenCV)
								</dt>
								<dd>
									@Html.DisplayFor(model => model.tenCV)
								</dd>

								<dt>
									@Html.DisplayNameFor(model => model.hanHoanThanh)
								</dt>
								<dd>
									@Html.DisplayFor(model => model.hanHoanThanh)
								</dd>

								<dt>
									@Html.DisplayNameFor(model => model.moTaCV)
								</dt>
								<dd>
									@Html.DisplayFor(model => model.moTaCV)
								</dd>

								<dt>
									@Html.DisplayNameFor(model => model.yeuCauCV)
								</dt>
								<dd>
									@Html.DisplayFor(model => model.yeuCauCV)
								</dd>

							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="modal-footer">
	<button data-dismiss="modal" class="btn btn-default btn-sx sharp">@*<i class="glyphicon glyphicon-plus"></i>*@ Đóng</button>
</div>
