@Scripts.Render("~/bundles/NhanSu/Scripts/tab-content")

<script>
	openPage("QLCV", document.getElementById("lQLCV"));
	function ConfirmDelete(currentId) {
		$.ajax({
			type: "Get",
			url: '@Url.Action("PVConfirmDelete", "CongViec")',
			data: { id: currentId },
			success: function (data) {
				$('#PVConfirmDelete').html(data);
				$('#item_remove').modal('show');
			}
		})
	}

	function Edit(currentId) {
		$.ajax({
			type: "Get",
			url: '@Url.Action("PVEdit", "CongViec")',
			data: { id: currentId },
			success: function (data) {
				$('#PVEdit').html(data);
				$('#item_edit').modal('show');
			}
		})
	}

	function Details(currentId) {
		$.ajax({
			type: "Get",
			url: '@Url.Action("PVDetails", "CongViec")',
			data: { id: currentId },
			success: function (data) {
				$('#PVDetails').html(data);
				$('#item_view').modal('show');
			}
		})
	}

	function Create() {
		$.ajax({
			type: "Get",
			url: '@Url.Action("PVCreate", "CongViec")',
			success: function (data) {
				$('#PVCreate').html(data);
				$('#item_create').modal('show');
			}
		})
	}

	function Search() {
		var filter = $('#search_string').val();
		if (filter == "") {
			var url = '@Url.Action("QuanLyCongViec", "CongViec")';
			window.location.href = url;
		}
		else {
			var url = '@Url.Action("QuanLyCongViec", "CongViec", new { filter = "__filter__" })';
			window.location.href = url.replace('__filter__', $('#search_string').val());
		}
	}

