@{
    Layout = "~/Views/Shared/_LayoutDatVe.cshtml";
}
@model IEnumerable<DataModel.DatVe>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">ĐẶT VÉ XE</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-success">
                <div class="panel-heading">
                    Danh sách Đặt vé
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Mã vé</th>
                                <th>Chuyến xe</th>
                                <th>Số ghế</th>
                                <th>Tổng tiền</th>
                                <th>Khách Hàng</th>
                                <th>Thanh toán</th>
                                <th>Lựa chọn</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{int i = 1;}
                            @foreach (var item in Model)
                            {

                            <tr class="odd gradeX">
                                <td>@i</td>
                                @{i++; }
                                <td>@Html.DisplayFor(modelItem => item.maDatVe)</td>
                                <td>@Html.DisplayFor(modelItem => item.maChuyenXe)</td>
                                <td>@item.danhSachGhe()</td>
                                <td>@item.tongTien</td>
                                <td>@item.KhachHang.tenKhachHang</td>
                                <td>@Html.DisplayFor(modelItem => item.trangThai)</td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.maDatVe }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.maDatVe }) |
                                    @Html.ActionLink("Cập nhật thanh toán", "ThanhToan", new { id = item.maDatVe })
                                </td>
                            </tr>
                                    }

                        </tbody>
                    </table>
                    <!-- /.table-responsive -->

                </div>
                <!-- /.panel-body -->
                <div style="padding-left: 10px; padding-bottom: 10px">
                    <input type="button" class="btn btn-lg btn-info" value="Thêm Đặt vé" onclick="location.href='@Url.Action("Add", "DatVe")'" />
                </div>
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <script>
        @{
            string message = TempData["Message"] as string;
            if (message != null)
            {
               <text>toastr.info('@message');</text>
            }
        }
    </script>
    <!-- /.row -->
</div>
<!-- /#page-wrapper -->
