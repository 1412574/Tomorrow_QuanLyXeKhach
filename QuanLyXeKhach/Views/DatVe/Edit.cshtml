
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutDatVe.cshtml";
}
@model DataModel.DatVe

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">CẬP NHẬT KHÁCH HÀNG</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-info">
                <div class="panel-heading">
                    Cập nhật thông tin khách hàng
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            @using (Html.BeginForm("CapNhatDatVe", "DatVe", FormMethod.Get))
                            {
                                @Html.AntiForgeryToken()

                            <form role="form">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.maDatVe)

                                <div class="form-group">
                                    <label>Mã chuyến xe:</label>
                                    @Html.TextBoxFor(model => model.maChuyenXe, new { @class = "form-control" })
                                </div>

                               

                                <div class="form-group">
                                    <label>Số ghế:</label>
                                    @Html.TextBoxFor(model => model.soGhe, new { @class = "form-control" })

                                </div>
                                <div class="form-group">
                                    <label>Giá vé:</label>
                                    @Html.TextBoxFor(model => model.giaVe, new { @class = "form-control" })

                                </div>

                                <div class="form-group">
                                    <label>Mã khách hàng:</label>
                                    @Html.TextBoxFor(model => model.maKhachHang, new { @class = "form-control" })

                                </div>
                                <div class="form-group">
                                    <label>Trạng thái vé:</label>
                                    @Html.TextBoxFor(model => model.trangThai, new { @class = "form-control" })
                                    <p class="help-block">"Đã thanh toán" hoặc "Chưa thanh toán"</p>
                                </div>
                                <button type="submit" class="btn btn-lg btn-success">Lưu cập nhật</button>

                            </form>
                            }
                        </div>

                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /#page-wrapper -->
