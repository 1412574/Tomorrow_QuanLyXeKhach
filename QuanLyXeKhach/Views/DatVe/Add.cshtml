
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_LayoutDatVe.cshtml";
}

@model DataModel.DatVe

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">THÊM ĐẶT VÉ</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-danger">
                <div class="panel-heading">
                    Thêm mới một Đặt vé
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            @using (Html.BeginForm("ThemDatVe", "DatVe", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()

                            <form>
                                <div class="form-group">
                                    <label for="ChuyenXe">Mã chuyến xe</label>
                                    @Html.DropDownListFor(model => model.ChuyenXe, (IEnumerable<SelectListItem>)ViewBag.listMaChuyenXe, new { @class = "form-control", @required="required" })
                                </div>

                                <div class="form-group">
                                    <label for="soghes__">Số ghế</label><br/>
                                    <select id="soghes__" name="soghes[]" class="form-control" required multiple>
                                    </select>                                    
                                </div>

                                <div class="form-group">
                                    <label for="giave">Giá vé</label>
                                    <input type="text" name="giave" class="form-control" id="giave" required>
                                </div>

                                <div class="form-group">
                                    <label for="sodienthoai">Số điện thoại</label>
                                    <input type="text" name="sodienthoai" class="form-control" id="sodienthoai" required>
                                </div>

                                <div class="form-group">
                                    <label for="tenkhachhang">Tên khách hàng</label>
                                    <input type="text" name="tenkhachhang" class="form-control" id="tenkhachhang" required>
                                </div>

                                <button type="submit" class="btn btn-primary">Submit</button>
                            </form>
                            }
                        </div>

                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <script type="text/javascript">
        var soGheTrong = $('#soghes__').select2();
        var chuyenXe = $('#ChuyenXe');

        chuyenXe.on('change', function (e) {
            var val = $(this).val();
            changeSoGheTrong(soGheTrong, val);
        });
        changeSoGheTrong(soGheTrong, chuyenXe.val());

        function changeSoGheTrong(element, val) {
            var getUrl = '/DatVe/LayGheTrongByChuyenXe/' + val;
            $.ajax({
                url: getUrl,
                type: "GET",
                headers: {
                    Accept: "application/json",
                    "Content-Type": "application/json"
                }
            })
            .done(function (data) {
                //element.val(null).trigger('change');
                soGheTrong.select2('destroy');
                soGheTrong.html('');
                var items = [];
                gheTrong = data[0] || [];
                for (var i = 0; i < gheTrong.length; i++) {
                    soGheTrong.append("<option value='" + gheTrong[i] + "'> " + gheTrong[i] + " </option>");
                }
                              
                soGheTrong.select2()
                $("#giave").val(data[1]);
            })
            .fail(function (error) {
                console.log(error);
            });
        }
    </script>
    <!-- /.row -->
</div>
<!-- /#page-wrapper -->
