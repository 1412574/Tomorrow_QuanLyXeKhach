@model DataModel.TrangThaiUV

<div class="modal-body">

	<div class="form-horizontal">

		<div class="row">
			<div class="col-md-12 item_content">
				<div class="col-md-9">
					<h3>
						<span>Mã trạng thái ứng viên @Model.maTT</span>
					</h3>
				</div>
				<div class="col-md-3" style="margin-top:24px;">
					<div class="input-group-btn">
						<button class="btn btn-danger btn-xs pull-right sharp" ; data-dismiss="modal" data-toggle="modal" onclick="ConfirmDelete(@Model.maTT)"><i class="glyphicon glyphicon-remove"></i></button>
						<button class="btn btn-warning btn-xs pull-right sharp" ; data-dismiss="modal" data-toggle="modal" onclick="Edit(@Model.maTT)"><i class="glyphicon glyphicon-edit"></i></button>
					</div>
				</div>
			</div>
			<div class="dl-horizontal">
				<div class="">
					<div class="row">
						<div class="col-md-12">
							<dt>
								@Html.DisplayNameFor(model => model.tenTT)
							</dt>
							<dd>
								@Html.DisplayFor(model => model.moTaTT)
							</dd>

						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="modal-footer">
	<button data-dismiss="modal" class="btn btn-default btn-sx sharp">@*<i class="glyphicon glyphicon-plus"></i>*@ Đóng</button>
</div>
