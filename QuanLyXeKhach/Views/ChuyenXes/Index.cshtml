@model IEnumerable<DataModel.ChuyenXe>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">QUẢN LÝ CHUYẾN XE</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-success">
                <div class="panel-heading">
                    Danh sách tuyến xe
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Tên tuyến xe</th>
                                <th>Tên Chuyến Xe</th>
                                <th>Ngày giờ chạy</th>
                                <th>Tài Xế</th>
                                <th>Lựa chọn</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TuyenXe.TenTuyenXe)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TenChuyenXe)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NgayGioChay)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TaiXe)
                        </td>
                        <td>
                            @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.MaChuyenXe }) |
                            @Html.ActionLink("Chi tiết", "Details", new { id = item.MaChuyenXe }) |
                            @Html.ActionLink("Xóa", "Delete", new { id = item.MaChuyenXe })
                        </td>
                    </tr>
    }
                        </tbody>
                    </table>
                </div>
                <div style="padding-left: 10px; padding-bottom: 10px">
                    <input type="button" class="btn btn-lg btn-info" value="Thêm chuyến xe" onclick="location.href='@Url.Action("Create","ChuyenXes")'" />
                </div>
            </div>
        </div>
    </div>
</div>
